#searchContainer(ng-class='{tagBox:tagBox}')

    #stats
        span.badge(ng-class='{overload:overload}', hover='record-count', bottom)
            | {{count}}
            span    ⃰

    #tagBox(explain='tagBox', top, no-arrow)

        select.hide(selectize='appInit',
                    multiple,
                    style='width:100%',
                    autofocus="autofocus",
                    tabindex='0')

            optgroup(label='SMART FILTERS')

    #searchBox(explain='searchBox', top, no-arrow)

        input.search.search-large(type='search',
                                    ng-model='searchText.$',
                                    placeholder='Type here to search within this page.',
                                    tabindex='-1')